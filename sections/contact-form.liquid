<div class="max-w-xl mx-auto py-16 px-4">
  <h1 class="font-heading text-4xl font-bold mb-4 text-center text-brand-text">{{ page.title }}</h1>
  {%- if page.content != blank -%}
    <div class="prose max-w-none mb-12 text-center">
      {{ page.content }}
    </div>
  {%- endif -%}

  {%- form 'contact' -%}
    {%- if form.posted_successfully? -%}
      <p class="mb-4 text-center text-brand-primary">Thanks for contacting us! We'll get back to you shortly.</p>
    {%- endif -%}

    {{ form.errors | default_errors }}

    <div class="space-y-6">
      <div>
        <label for="ContactFormName" class="block text-sm font-medium text-brand-text/80 mb-1">Name</label>
        <input type="text" id="ContactFormName" name="contact[name]"
               class="w-full bg-brand-card rounded-lg border-gray-300 shadow-sm focus:border-brand-primary focus:ring-brand-primary">
      </div>
      <div>
        <label for="ContactFormEmail" class="block text-sm font-medium text-brand-text/80 mb-1">Email</label>
        <input type="email" id="ContactFormEmail" name="contact[email]"
               class="w-full bg-brand-card rounded-lg border-gray-300 shadow-sm focus:border-brand-primary focus:ring-brand-primary">
      </div>
      <div>
        <label for="ContactFormMessage" class="block text-sm font-medium text-brand-text/80 mb-1">Message</label>
        <textarea id="ContactFormMessage" name="contact[body]" rows="5"
                  class="w-full bg-brand-card rounded-lg border-gray-300 shadow-sm focus:border-brand-primary focus:ring-brand-primary"></textarea>
      </div>
      <div class="text-center pt-4">
        <button type="submit"
                class="bg-brand-primary text-white font-bold py-3 px-8 rounded-lg hover:bg-brand-primary/90 transition-colors">
          Send Message
        </button>
      </div>
    </div>
  {%- endform -%}
</div>

{% schema %}
{
  "name": "Contact Form",
  "settings": []
}
{% endschema %}