<header class="relative md:h-20 max-h-20 md:max-h-20 overflow-hidden transition-[max-height] duration-300 ease-in-out">
  <div class="max-w-5xl mx-auto px-4">
    <div class="relative flex items-center justify-between h-20">

      <div class="flex items-center">
        <div class="md-hidden">
          <button id="hamburger-button" class="p-2 -ml-2" aria-label="Open menu" aria-expanded="false">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path id="hamburger-icon-open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h12"></path>
              <path id="hamburger-icon-close" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>

        <nav class="hidden md:flex md:grow">
          <ul class="flex grow flex-wrap items-center">
            <li><a href="/#products" class="font-semibold text-gray-700 hover:text-brand-text px-4 py-2">Products</a></li>
            <li><a href="/blogs/tutorials" class="font-semibold text-gray-700 hover:text-brand-text px-4 py-2">Tutorials</a></li>
            <li><a href="/pages/about" class="font-semibold text-gray-700 hover:text-brand-text px-4 py-2">About</a></li>
            <li><a href="/pages/contact" class="font-semibold text-gray-700 hover:text-brand-text px-4 py-2">Contact</a></li>
          </ul>
        </nav>
      </div>

      <div class="absolute left-1/2 -translate-x-1/2 md:static md:translate-x-0 md:flex-1 md:order-first">
        <a href="/" class="flex items-center gap-2">
          <img src="{{ 'camphora-logo.svg' | asset_url }}" alt="Camphora Studio Logo" class="w-8 h-8">
          <span class="text-xl font-bold text-brand-text">Camphora Studio</span>
        </a>
      </div>

      <div class="flex items-center ml-4">
        <button type="button" id="open-cart-button" class="relative block w-6 h-6">
          {% render 'icon-cart' %}
          <span id="cart-item-count" class="absolute -top-2 -right-3 bg-brand-primary text-white text-xs rounded-full h-5 w-5 flex items-center justify-center {% if cart.item_count == 0 %}hidden{% endif %}">
            {{ cart.item_count }}
          </span>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu Content -->
  <div id="mobile-menu-content" class="h-[calc(100vh-5rem)] flex flex-col justify-between md:hidden">
    <div class="p-4">
      <ul class="space-y-4 text-center">
        <li><a href="/#products" class="block py-2 text-xl font-semibold text-gray-700 hover:text-brand-text">Products</a></li>
        <li><a href="/blogs/tutorials" class="block py-2 text-xl font-semibold text-gray-700 hover:text-brand-text">Tutorials</a></li>
        <li><a href="/pages/about" class="block py-2 text-xl font-semibold text-gray-700 hover:text-brand-text">About</a></li>
        <li><a href="/pages/contact" class="block py-2 text-xl font-semibold text-gray-700 hover:text-brand-text">Contact</a></li>
      </ul>
    </div>
    <div class="p-4 border-t border-white/10">
      <ul class="space-y-2 text-center">
        <li><a href="/pages/shipping-returns-policy" class="block py-1 text-sm text-gray-600 hover:text-brand-text">Shipping & Returns</a></li>
        <li><a href="/pages/privacy-policy" class="block py-1 text-sm text-gray-600 hover:text-brand-text">Privacy Policy</a></li>
      </ul>
    </div>
  </div>
</header>

<script>
document.addEventListener('DOMContentLoaded', () => {
  // --- Mobile Menu Drawer Elements ---
  const hamburgerButton = document.getElementById('hamburger-button');
  const headerElement = hamburgerButton.closest('header');
  const openIcon = document.getElementById('hamburger-icon-open');
  const closeIcon = document.getElementById('hamburger-icon-close');

  const toggleMenu = (isOpen) => {
    if (isOpen) {
      // If at the very top, scroll down 1px to prevent layout shift
      if (window.scrollY === 0) {
        window.scrollTo(0, 1);
      }
      document.body.classList.add('body-no-scroll');
      headerElement.classList.add('max-h-screen');
      headerElement.classList.remove('max-h-20');
      // Toggle icon
      openIcon.classList.add('hidden');
      closeIcon.classList.remove('hidden');
      hamburgerButton.setAttribute('aria-expanded', 'true');
    } else {
      document.body.classList.remove('body-no-scroll');
      headerElement.classList.add('max-h-20');
      headerElement.classList.remove('max-h-screen');
      // Toggle icon
      openIcon.classList.remove('hidden');
      closeIcon.classList.add('hidden');
      hamburgerButton.setAttribute('aria-expanded', 'false');
    }
  };

  hamburgerButton.addEventListener('click', () => {
    const isExpanded = hamburgerButton.getAttribute('aria-expanded') === 'true';
    toggleMenu(!isExpanded);
  });

  // --- Sticky Header Style Script ---
  const headerSection = document.getElementById('shopify-section-header');
  if (headerSection) {
    headerSection.classList.add('bg-brand-bg/80', 'backdrop-blur-md', 'sticky', 'top-0', 'z-30');
  }
});
</script>

