<footer class="bg-brand-bg border-t border-gray-200">
  <div class="max-w-5xl mx-auto py-12 px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-12">
      
      {% comment %} Left Column: Links (No Heading) {% endcomment %}
      <div>
        <ul class="space-y-2">
          {%- for link in section.settings.menu.links -%}
            <li>
              <a href="{{ link.url }}" class="text-gray-700 hover:text-brand-text transition-colors">
                {{ link.title }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </div>

      {% comment %} Right Column: Newsletter Signup {% endcomment %}
      <div>
        {%- if section.settings.newsletter_enable -%}
          {%- if section.settings.newsletter_subheading != blank -%}
            <div class="prose prose-sm text-gray-600 mb-4">
              {{ section.settings.newsletter_subheading }}
            </div>
          {%- endif -%}

          {%- form 'customer', id: 'ContactFooter', class: 'space-y-4' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="relative">
              <input
                type="email"
                name="contact[email]"
                id="NewsletterForm--{{ section.id }}"
                class="w-full bg-brand-card rounded-lg border border-gray-300 shadow-sm focus:outline-none focus:border-brand-primary focus:ring-2 focus:ring-brand-primary p-3"
                placeholder="Enter your email"
                aria-label="Enter your email"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                required
              >
            </div>
            <button id="newsletter-button" type="submit" class="w-full bg-brand-primary text-white font-bold py-3 px-4 rounded-lg shadow-lg shadow-neutral-900/20 transition-all duration-300 transform md:hover:shadow-xl md:hover:-translate-y-1 disabled:opacity-70 disabled:transform-none disabled:shadow-lg">
              <span id="newsletter-button-text">{{ section.settings.newsletter_button_text }}</span>
            </button>
          {%- endform -%}
        {%- endif -%}
      </div>

    </div>

    {% comment %} Bottom Bar: Copyright and Payment Icons {% endcomment %}
    <div class="mt-12 pt-8 border-t border-gray-300 flex flex-col md:flex-row md:items-center md:justify-between text-center text-sm text-gray-500 gap-4">
      <p>&copy; {{ 'now' | date: "%Y" }}, {{ shop.name }}. All rights reserved.</p>
      
      {%- if section.settings.show_payment_icons -%}
        <div class="flex justify-center items-center">
          {%- for type in shop.enabled_payment_types -%}
            {{ type | payment_type_svg_tag: class: 'h-6' }}
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>

  </div>
</footer>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const contactForm = document.getElementById('ContactFooter');
  if (!contactForm) return;

  const newsletterButton = document.getElementById('newsletter-button');
  const newsletterButtonText = document.getElementById('newsletter-button-text');
  const emailInput = contactForm.querySelector('input[type="email"]');
  const originalButtonText = newsletterButtonText.textContent;
  const spinnerIcon = `<svg class="animate-spin h-5 w-5 text-current" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>`;

  contactForm.addEventListener('submit', function(event) {
    event.preventDefault(); // Prevent default to handle the response
    
    newsletterButton.disabled = true;
    newsletterButtonText.innerHTML = `<div class="flex justify-center items-center">${spinnerIcon}</div>`;

    const formData = new FormData(contactForm);

    fetch('/contact', {
      method: 'POST',
      headers: {
        'X-Requested-With': 'XMLHttpRequest',
        'Accept': 'application/javascript'
      },
      body: formData
    })
    .then(response => {
      if (response.ok && !response.redirected) {
        // This is a true success (e.g., a 200 OK response without a redirect).
        newsletterButtonText.textContent = 'âœ“ Subscribed!';
        emailInput.value = '';
      } else if (response.redirected) {
        // This is a CAPTCHA. The browser will handle the redirect automatically.
        // We do nothing and let the user be taken to the CAPTCHA page.
        // The button will stay in its loading state until the page unloads.
      } else {
        // This is a validation error (e.g., invalid email) or other server error.
        throw new Error('Form submission failed.');
      }
    })
    .catch(error => {
      console.error('Newsletter Error:', error);
      newsletterButtonText.textContent = 'Error!';
      // Re-enable the button so the user can try again.
      setTimeout(() => {
        newsletterButton.disabled = false;
        newsletterButtonText.textContent = originalButtonText;
      }, 3000);
    });
  });
});
</script>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Footer Menu",
      "default": "footer"
    },
    {
      "type": "header",
      "content": "Newsletter"
    },
    {
      "type": "checkbox",
      "id": "newsletter_enable",
      "label": "Show newsletter signup",
      "default": true
    },
    {
      "type": "richtext",
      "id": "newsletter_subheading",
      "label": "Subheading",
      "default": "<p>Get notified about new products. We respect your inbox and will only email you a couple of times a year.</p>"
    },
    {
      "type": "text",
      "id": "newsletter_button_text",
      "label": "Button Text",
      "default": "Subscribe to our Newsletter"
    },
    {
      "type": "header",
      "content": "Payment Methods"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    }
  ]
}
{% endschema %}