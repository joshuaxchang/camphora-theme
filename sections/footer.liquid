<footer class="bg-brand-bg border-t border-gray-200">
  <div class="max-w-5xl mx-auto py-12 px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div>
        <h3 class="font-heading font-bold text-brand-text uppercase mb-4">{{ section.settings.menu.title }}</h3>
        <ul class="space-y-2">
          {%- for link in section.settings.menu.links -%}
            <li>
              <a href="{{ link.url }}" class="text-gray-700 hover:text-brand-text transition-colors">
                {{ link.title }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </div>

      <div>
        <h3 class="font-bold uppercase mb-4">{{ section.settings.heading }}</h3>
        <p class="text-gray-600">
          {{ section.settings.text }}
        </p>
      </div>

    </div>

    <div class="mt-12 pt-8 border-t border-gray-300 text-center text-sm text-gray-500">
      <p>&copy; {{ 'now' | date: "%Y" }}, {{ shop.name }}. All rights reserved.</p>
    </div>

  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Footer Menu",
      "default": "footer"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Text Heading",
      "default": "Our Mission"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Share your brand's story with your customers.</p>"
    }
  ]
}
{% endschema %}