<section id="products" class="py-20">
  <div class="max-w-5xl mx-auto px-4">
    <h2 class="font-heading text-4xl font-bold mb-12 text-center text-brand-text-sub">
      {{ section.settings.title }}
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {%- for product in collections.all.products -%}
        <a href="{{ product.url }}" class="group bg-brand-card rounded-lg shadow-card hover:shadow-card-hover transition-all duration-300 flex flex-col overflow-hidden transform hover:-translate-y-2">
          {%- if product.featured_image -%}
            <div class="overflow-hidden aspect-square">
              <img
                src="{{ product.featured_image | image_url: width: 500 }}"
                alt="{{ product.featured_image.alt | escape }}"
                width="500"
                height="500"
                class="w-full h-full object-cover transition-transform duration-300"
                loading="lazy"
              >
            </div>
          {%- else -%}
            <div class="w-full aspect-square bg-brand-bg flex items-center justify-center">
              {{ 'product-1' | placeholder_svg_tag: 'w-12 h-12 text-gray-300' }}
            </div>
          {%- endif -%}

          <div class="p-6 flex flex-col flex-grow">
            <h3 class="font-heading text-2xl font-bold text-brand-text-sub mb-2 group-hover:underline decoration-2 underline-offset-4">
              {{ product.title }}
            </h3>
            <div class="flex justify-between items-center mt-auto pt-4">
              <p class="text-xl font-normal text-brand-primary">
                {{ product.price | money }}
              </p>
              <span class="text-brand-primary font-semibold">
                Details &rarr;
              </span>
            </div>
          </div>
        </a>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Products"
    }
  ],
  "presets": [
    {
      "name": "Products"
    }
  ]
}
{% endschema %}