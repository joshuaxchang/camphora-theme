<div id="cart-drawer" class="fixed top-0 right-0 z-40 h-screen p-4 overflow-y-auto transition-transform translate-x-full bg-white w-80" tabindex="-1">
  <h5 class="text-base font-semibold text-gray-500 uppercase">Shopping Cart</h5>
  <button type="button" id="close-cart-drawer" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 absolute top-2.5 end-2.5 inline-flex items-center justify-center">
    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14"><path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/></svg>
    <span class="sr-only">Close cart</span>
  </button>

  <div class="py-4">
    {% if cart.item_count > 0 %}
      <ul>
        {% for item in cart.items %}
          <li class="flex py-2">
            <img src="{{ item.image | image_url: width: 100 }}" alt="{{ item.title | escape }}" class="w-16 h-16 object-cover rounded">
            <div class="ml-4 flex flex-col">
              <a href="{{ item.url }}" class="text-sm font-medium text-gray-900">{{ item.title }}</a>
              <span class="text-sm text-gray-500">{{ item.final_price | money }}</span>
            </div>
          </li>
        {% endfor %}
      </ul>
      <div class="mt-4">
        <a href="/checkout" class="w-full text-center bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700">
          Checkout
        </a>
      </div>
    {% else %}
      <p>Your cart is empty.</p>
    {% endif %}
  </div>
</div>